---
import { Debug } from 'astro:components';
import { YouTube } from '@astro-community/astro-embed-youtube';
const  { attributes, props } = Astro.props;
---
<div class="yt_wrapper">
    <YouTube 
        id={attributes.url}
        params="autoplay=1&controls=0"
        playlabel="Play the video" />
</div>
<style>
    .yt_wrapper {
        position: relative;
        display: block;
        width: 600px;
        aspect-ratio: 16/9;
        border: 1px #222 solid;

        .lty-playbtn {
            z-index: 10000;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate3d( -50%, -50%, 0);
            width: 8rem;
            height: 8rem;
            border-radius: 50%;
            background: #080;
            color: #FFFFFF;
            font-size: 2rem; 
            transition: all 120ms ease-out;

            &:hover {
                background: #0f0;
            }

            &::before { 
                background: inherit;
                border-radius: 5% / 50%;
                content: "";
                position: absolute;
            }

            &::after {
                border-style: solid;
                border-width: 1em 0 1em 1.732em;
                border-color: transparent transparent transparent rgba(0, 0, 0, 0.75);
                content: ' ';
                font-size: 0.75em;
                height: 0;
                margin: -1em 0 0 -0.75em;
                top: 50%;
                left: 50%;
                position: absolute;
                width: 0;
            }
        }

        &:has(.lyt-activated) {
            .lty-playbtn {
                visibility:hidden;  
            }
        }

    }

</style>